.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}

.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 20rpx;
}

.access-denied {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
}

.access-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.access-text {
  font-size: 32rpx;
  color: #999;
  font-weight: 500;
}

.main-content {
  max-width: 750rpx;
  margin: 0 auto;
}

.header-section {
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #87daff, #5bc0de);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.purchase-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.purchase-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 1px solid rgba(135, 218, 255, 0.2);
}

.purchase-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.card-header {
  background: linear-gradient(135deg, #87daff 0%, #5bc0de 100%);
  padding: 30rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.card-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.product-no {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 500;
}

.card-body {
  padding: 30rpx;
}

.info-row {
  display: flex;
  margin-bottom: 25rpx;
  gap: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-item.full-width {
  flex: 1;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.info-value.quantity {
  color: #87daff;
}

.info-value.price {
  color: #ff6b6b;
  font-weight: bold;
}

.attributes-section {
  margin-top: 25rpx;
  padding-top: 25rpx;
  border-top: 1px solid #f0f0f0;
}

.attributes-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 15rpx;
}

.attribute-tag {
  background: linear-gradient(135deg, #a8e6cf, #7fcdcd);
  color: #2d5a5a;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.3);
  transition: all 0.3s ease;
}

.attribute-tag:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(168, 230, 207, 0.4);
}

.load-more-section {
  margin-top: 40rpx;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 480px) {
  .info-row {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .page-title {
    font-size: 36rpx;
  }
  
  .product-name {
    font-size: 32rpx;
  }
}

/* 加载动画 */
.purchase-card {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
