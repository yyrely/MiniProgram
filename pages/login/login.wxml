<!--pages/login/login.wxml-->
<view class="login-container">
  <view class="login-card">
    <view class="logo-section">
      <view class="logo">
        <image src="/images/shop.png" mode="aspectFit" />
      </view>
      <text class="app-title">库存管理系统</text>
    </view>
    
    <view class="form-section">
      <view class="input-group">
        <view class="input-wrapper">
          <text class="input-icon">👤</text>
          <input
            class="input-field"
            placeholder="请输入用户名"
            bind:input="username"
            value="{{username}}"
          />
        </view>
      </view>
      
      <view class="input-group">
        <view class="input-wrapper">
          <text class="input-icon">🔒</text>
          <input
            class="input-field"
            placeholder="请输入密码"
            password="true"
            bind:input="password"
            value="{{password}}"
          />
        </view>
      </view>
      
      <view class="button-section">
        <button class="login-btn" bind:tap="login">登录</button>
      </view>
    </view>
  </view>
</view>
