.sale-box {
  position: relative; }
  .sale-box .btn {
    width: auto;
    padding: 2px 10px;
    font-size: 15px;
    font-weight: normal;
    border-radius: 5px;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
  }

.input-row {
  width: 100%;
  display: flex;
  align-items: center;
  margin: 10px 0; }
  .input-label,
  .input-text {
    height: 30px;
    line-height: 30px; }
  .input-label {
    display: inline-block;
    white-space: nowrap; }
  .input-text {
    flex: 1;
    border: 1px solid #eee;
  }

.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 20rpx;
}

.main-content {
  max-width: 750rpx;
  margin: 0 auto;
}

.header-section {
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #87daff, #5bc0de);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.sale-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.sale-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 1px solid rgba(135, 218, 255, 0.2);
  position: relative;
}

.sale-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.card-header {
  background: linear-gradient(135deg, #87daff 0%, #5bc0de 100%);
  padding: 30rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.card-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.product-no {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 500;
}

.return-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.return-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.05);
}

.card-body {
  padding: 30rpx;
}

.info-row {
  display: flex;
  margin-bottom: 25rpx;
  gap: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-item.full-width {
  flex: 1;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.info-value.quantity {
  color: #87daff;
}

.info-value.price {
  color: #ff6b6b;
  font-weight: bold;
}

.info-value.total-price {
  color: #28a745;
  font-weight: bold;
  font-size: 32rpx;
}

.attributes-section {
  margin-top: 25rpx;
  padding-top: 25rpx;
  border-top: 1px solid #f0f0f0;
}

.attributes-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 15rpx;
}

.attribute-tag {
  background: linear-gradient(135deg, #a8e6cf, #7fcdcd);
  color: #2d5a5a;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.3);
  transition: all 0.3s ease;
}

.attribute-tag:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(168, 230, 207, 0.4);
}

.load-more-section {
  margin-top: 40rpx;
  text-align: center;
}

/* 对话框样式 */
.custom-dialog {
  border-radius: 20rpx;
}

.dialog-content {
  padding: 20rpx;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border: 1px solid #e9ecef;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
}

.input-field {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: white;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #87daff;
  box-shadow: 0 0 0 4rpx rgba(135, 218, 255, 0.1);
}

.input-unit {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 480px) {
  .info-row {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .page-title {
    font-size: 36rpx;
  }
  
  .product-name {
    font-size: 32rpx;
  }
  
  .return-btn {
    position: static;
    margin-top: 15rpx;
    align-self: flex-start;
  }
}

/* 加载动画 */
.sale-card {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
